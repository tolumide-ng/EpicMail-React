{
  "name": "epicmail",
  "version": "1.0.0",
  "description": "Frontend implementation of epicmail (bootcamp project) with react",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "start:dev": "webpack-dev-server --hot --config webpack.dev.js --open",
    "heroku-postbuild": "npm run build",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint '**/*.js'",
    "lint:fix": "prettier-eslint \"**/*.{js,json}\" --write",
    "prettier": "prettier **/*.{js,json} --write",
    "format": "pretty-quick",
    "test": "jest --verbose --coverage ./src",
    "test:watch": "yarn jest  --watchAll --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run prettier",
      "git add ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tolumide-ng/EpicMail-React.git"
  },
  "keywords": [
    "React",
    "Frontend",
    "Andela",
    "Bootcamp"
  ],
  "author": " <tolumideshopein@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tolumide-ng/EpicMail-React/issues"
  },
  "homepage": "https://github.com/tolumide-ng/EpicMail-React#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.20",
    "@fortawesome/free-solid-svg-icons": "^5.10.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "file-loader": "^4.0.0",
    "html-loader": "^0.5.5",
    "identity-obj-proxy": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "pretty-quick": "^1.11.1",
    "redux-mock-store": "^1.5.3",
    "redux-promise-middleware": "^6.1.1",
    "style-loader": "^0.23.1",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@hot-loader/react-dom": "^16.8.6",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.7",
    "autoprefixer": "^9.6.1",
    "axios": "^0.19.0",
    "babel-jest": "^24.8.0",
    "coveralls": "^3.0.6",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "formik": "^1.5.8",
    "glob": "^7.1.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.9.0",
    "jest-localstorage-mock": "^2.4.0",
    "mini-css-extract-plugin": "^0.7.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prop-types": "^15.7.2",
    "purgecss-webpack-plugin": "^1.5.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "tailwindcss": "^1.0.5",
    "terser-webpack-plugin": "^1.3.0",
    "toastr": "^2.1.4",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1",
    "yup": "^0.27.0"
  }
}
